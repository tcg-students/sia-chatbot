pipeline {
     agent any
     stages {
        stage("Build") {
            steps {
                sh "cd frontend && sudo npm install"
                sh "sudo npm run build"
            }
        }
        stage("Deploy") {
            steps {
                sh "sudo rm -rf /var/www/html/sia-chatbot"
                sh "sudo cp -r ${WORKSPACE}/build/ /var/www/html/sia-chatbot/"
            }
        }
    }
}
